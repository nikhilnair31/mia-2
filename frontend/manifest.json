{
    "manifest_version": 3,
    "name": "MIA Chrome Extension",
    "version": "1.0",
    "description": "MIA database query extension",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_title": "Open MIA Assistant",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html"
}